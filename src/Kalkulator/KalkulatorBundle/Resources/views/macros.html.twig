{% macro widgetBlock(title, titleSmall, content) %}
    <div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
            <div class="col-lg-12">
		<div class="ibox float-e-margins">
		<div class="ibox-title">
                    <h5>{{title}}
                        {% if not titleSmall is empty %}
                        <small>{{titleSmall}}</small>
                        {% endif %}
                    </h5>
		</div>
		<div class="ibox-content">
                    {% autoescape false %}
                    {{ content }}
                    {% endautoescape %}
                </div>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}
{% macro zglosBlad(title, description) %}
<div class="modal inmodal" id="myModa" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content animated flipInY">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <i class="fa fa-envelope modal-icon"></i>
                <h4 class="modal-title">{{title|raw}}</h4>
                <small class="font-bold">{{description|raw}}</small>
            </div>
            <div class="modal-body">
                <div id="jq-wyslij-blad-email" class="form-group">
                    <label class="control-label">E-mail</label> 
                    <input name="email" type="email" placeholder="Podaj swoj e-mail" class="form-control">
                </div>
                <div id="jq-wyslij-blad-temat" class="form-group">
                    <label class="control-label">Temat</label> 
                    <input name="temat" type="text" placeholder="Wpisz temat" class="form-control">
                </div>
                <div id="jq-wyslij-blad-tresc" class="form-group">
                    <label class="control-label">Treść</label> 
                    <textarea rows="5" name="tresc" class="form-control"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Zamknij</button>
                <button type="button" class="btn btn-primary" id="jq-wyslij-blad">Wyslij</button>
            </div>
        </div>
    </div>
</div>
{% endmacro %}